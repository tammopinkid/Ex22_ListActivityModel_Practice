<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egci428.ex_listactivitymodel.DetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/courseName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="32dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/TitleName"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/courseName2"
            android:layout_below="@+id/imageCourse2"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="New Text"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp" />

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageCourse2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/image10101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/courseNoText"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/imageCourse2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/creditsText"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:minHeight="80dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="275dp" />

</android.support.constraint.ConstraintLayout>
